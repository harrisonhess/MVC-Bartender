@model MVC_Bartender.Models.Drink

@{
    ViewData["Title"] = "Drink";
}

<h1>Drink Details</h1>

<div>
    <h4>Drink Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Drink ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class = "col-sm-2">
            Drink Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrinkName)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrinkDesc)
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            $ @Html.DisplayFor(model => model.DrinkPrice)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "EditDrink", new { id = Model.ID }) |
    <a asp-action="Menu">Back to Menu</a>
</div>
