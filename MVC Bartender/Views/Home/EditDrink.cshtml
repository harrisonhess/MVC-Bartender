@model MVC_Bartender.Models.Drink

@{
    ViewData["Title"] = "EditDrink";
}

<h1>Edit Drink Details</h1>

<h4>Drink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveDrink">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrinkName" class="control-label"></label>
                <input asp-for="DrinkName" class="form-control" />
                <span asp-validation-for="DrinkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrinkDesc" class="control-label"></label>
                <input asp-for="DrinkDesc" class="form-control" />
                <span asp-validation-for="DrinkDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrinkPrice" class="control-label"></label>
                <input asp-for="DrinkPrice" class="form-control" />
                <span asp-validation-for="DrinkPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Menu">Back to Menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
